<%= form_with url: "/adoption_apps/new", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :street_address %>
  <%= f.text_field :street_address %><br/>
  <%= f.label :city %>
  <%= f.text_field :city %><br/>
  <%= f.label :state %>
  <%= f.text_field :state %><br/>
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %><br/>
  <p>Please describe why you feel you could provide a good home:<br/><%= f.label :description %></p>
  <%= f.text_area :description %><br/>
  <%= f.submit "Submit Application" %>
<%end%>